<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.poomoo.autoparts.view.SlideShowView
        android:id="@+id/slideshowview"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/head_background"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/navigation_radioButton_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/style_navigation_home_background"
            android:gravity="center"
            android:singleLine="true"
            android:text="首页"
            android:textColor="@color/titleText"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/navigation_radioButton_userinfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/style_navigation_userinfo_background"
            android:gravity="center"
            android:singleLine="true"
            android:text="客户资料"
            android:textColor="@color/titleText"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/navigation_radioButton_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/style_navigation_search_background"
            android:gravity="center"
            android:singleLine="true"
            android:text="找配件"
            android:textColor="@color/titleText"
            android:textSize="12sp" />
        <RadioButton
            android:id="@+id/navigation_radioButton_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/style_navigation_share_background"
            android:gravity="center"
            android:singleLine="true"
            android:text="分享软件"
            android:textColor="@color/titleText"
            android:textSize="12sp" />
        <RadioButton
            android:id="@+id/navigation_radioButton_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/style_navigation_more_background"
            android:gravity="center"
            android:singleLine="true"
            android:text="更多"
            android:textColor="@color/titleText"
            android:textSize="12sp" />
    </RadioGroup>

</LinearLayout>
